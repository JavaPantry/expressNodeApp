extends layout 

block content
    //- h1 #{article.title} 
    h1= article.title
    h5 Written By #{article.author} 
    p= article.body
    br
    hr
    br
    form(action="/articles/add", method="post")
        #form-group
            label(for="title") Title:
            input.form-control(type="text", name="title", id="title", placeholder="Title")
        #form-group
            label(for="author") Author:
            input.form-control(type="text", name="author", id="author", placeholder="author")
        #form-group
            label(for="body") Body:
            textarea.form-control(type="text", name="body", id="body", placeholder="body")
        //- input(type="text", name="title", placeholder="Title")
        //- textarea(name="body", placeholder="Body")
        input.btn.btn-primary(type="submit", value="Submit")