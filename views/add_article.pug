extends layout 

block content
    h1 #{title} Articles
    form(action="/articles/add", method="post")
        #form-group
            label(for="title") Title:
            input.form-control(type="text", name="title", id="title", placeholder="Title")
        #form-group
            label(for="body") Body:
            textarea.form-control(type="text", name="body", id="body", placeholder="body")
        br
        input.btn.btn-primary(type="submit", value="Submit")
        | 
        a.btn.btn-danger(href='/') Cancel